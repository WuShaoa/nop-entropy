<task x:schema="/nop/schema/task/task.xdef" xmlns:x="/nop/schema/xdsl.xdef">
    <steps>
        <xpl name="init">
            <output name="x">
                <source>1</source>
            </output>
        </xpl>

        <parallel name="test" aggregateVarName="results">
            <input name="x"/>

            <steps>
                <xpl name="step1" executor="myExecutor">
                    <input name="x"/>
                    <source>
                        return x + 1;
                    </source>
                </xpl>

                <xpl name="step2" executor="myExecutor">
                    <input name="x"/>
                    <source>
                        return x + 2;
                    </source>
                </xpl>
            </steps>

            <aggregator>
                return results.getStepValue('step1','RESULT') + results.getStepValue('step2','RESULT')
            </aggregator>
        </parallel>
    </steps>


    <output name="RESULT">
        <source>
            return RESULT == 5 ? 'OK' : 'FAIL'
        </source>
    </output>
</task>