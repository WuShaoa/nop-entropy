    <input name="b" type="Integer"/>

    <steps>
        <xpl name="init" useParentScope="true">
            <source>
                return a + b
            </source>
        </xpl>
    </steps>

    <output name="sum" type="Integer">
        <source>RESULT</source>
    </output>
</task>