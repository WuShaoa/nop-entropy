<codec x:schema="/nop/schema/record/packet-codec.xdef" xmlns:x="/nop/schema/xdsl.xdef"
       lengthFieldLength="2">
    <types>
        <type name="header">
            <fields>
                <field name="type" type="int" length="1" enum="MessageType"/>
            </fields>
        </type>

        <type name="request">
            <fields>
                <field name="id" type="long" length="8" codec="u8be"/>
                <field name="name" type="String" length="20" codec="FLA"/>
            </fields>
        </type>

        <type name="response">
        </type>

        <type name="logon">

        </type>

        <type name="logonOk">

        </type>

        <type name="error">

        </type>
    </types>

    <enums>
        <enum name="MessageType" valueType="int">
            <option code="request" value="1" label="Request"/>
            <option code="response" value="2" label="Response"/>
            <option code="logon" value="3" label="Logon"/>
            <option code="logonOk" value="4" label="LogonOk"/>
        </enum>
    </enums>
</codec>